{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "lib": [
      "dom",
      "es2018",
      "esnext.asynciterable"
    ],
    "declarationDir": "./Declatations",
    "outDir": "./www/Lib",
    "rootDir": "./Source",
    "composite": true,
    "removeComments": true,
    "alwaysStrict": true, 
    "baseUrl": "./Source",
    "esModuleInterop": true, 
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": false
  },
  "include": [
    "Source/**/*"
  ]
}